<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:lar="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent">
    <com.ayi.zidingyi_view.logandreg
        android:id="@+id/top"
        lar:center_text="商品详情"
        android:layout_width="match_parent"
        lar:left_but="@drawable/btn_back"
        android:layout_height="44dp">
    </com.ayi.zidingyi_view.logandreg>



    <ScrollView
        android:scrollbars="none"
        android:id="@+id/scro"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
       android:layout_marginLeft="10dp"
        android:layout_below="@id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:adjustViewBounds="true"
                 android:layout_below="@id/top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/image"/>
            <RelativeLayout
                android:id="@+id/shop_center"
                android:layout_width="match_parent"
                android:layout_height="140dp">
                <RelativeLayout
                    android:layout_marginLeft="30dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                    <LinearLayout
                        android:id="@+id/guige"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@id/shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="规格："/>
                        <TextView
                            android:id="@+id/shop_guige"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@id/guige"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="保质期："/>
                        <TextView
                            android:id="@+id/shop_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/red"
                        android:textSize="22sp"
                        android:id="@+id/price_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"/>
                    <TextView
                        android:textColor="@color/red"
                        android:textSize="22sp"
                        android:id="@+id/shop_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>
                </LinearLayout>

            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/luebai"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/shangp_xinagq"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/image"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:background="@color/main_green"/>
                <TextView
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品详情"/>

            </LinearLayout>
            <TextView
                android:id="@+id/shop_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""/>
            <RelativeLayout
                android:layout_below="@id/scro"
                android:layout_width="match_parent"
                android:layout_height="130dp"></RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/edit_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <EditText
                android:inputType="number"
                android:gravity="center"
                android:background="@null"
                android:maxLength="2"
                android:id="@+id/num_text"
                android:textSize="22sp"
                android:layout_centerInParent="true"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="0" />
            <ImageView
                android:id="@+id/jianqu"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/num_text"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/jianhao"/>
            <ImageView
                android:id="@+id/add"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/num_text"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/jiahao"/>
        </RelativeLayout>

            <Button

                android:layout_marginRight="10dp"
                android:id="@+id/ok"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="确定"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style_old"/>

    </LinearLayout>


</RelativeLayout>