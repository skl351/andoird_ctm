                            android:layout_height="match_parent"
                            android:background="@color/main_green" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/newcolorgray"
                            android:gravity="center_vertical"
                            android:padding="5dp"
