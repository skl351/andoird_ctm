<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--<com.ayi.zidingyi_view.logandreg-->
        <!--android:id="@+id/top"-->
        <!--lar:center_text="工作进度"-->
        <!--android:layout_width="match_parent"-->
        <!--lar:left_but="@drawable/btn_back"-->
        <!--android:layout_height="44dp">-->
    <!--</com.ayi.zidingyi_view.logandreg>-->
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/id1s"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:gravity="center"
            android:singleLine="true"
            android:text="工作进度"
            android:textColor="@color/black"
            android:id="@+id/logreg_center"
            android:layout_width="160dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>

        <RelativeLayout
            android:id="@+id/logreg_left"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/logreg_center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:id="@+id/logreg_left_nei"
                android:layout_width="50dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/btn_back"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/xiangq"
        android:layout_below="@id/id1s"
        android:layout_marginLeft="10dp"
        android:textColor="@color/main_orange"
        android:textSize="18sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="订单详情"/>
    <ScrollView
        android:layout_marginBottom="50dp"
        android:id="@+id/one_scro"
        android:layout_below="@id/xiangq"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/service_info_all_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/cancal_order"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="@string/xuanzdingdan"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/button_style_gr2"/>


    <RelativeLayout
        android:visibility="gone"
        android:clickable="true"
        android:id="@+id/progressBar1"
        android:background="@color/touming_color2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_centerInParent="true"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="80dp"
            android:layout_height="80dp" />
    </RelativeLayout>

</RelativeLayout>