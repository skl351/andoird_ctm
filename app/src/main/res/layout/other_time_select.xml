<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    xmlns:lar="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <com.ayi.zidingyi_view.logandreg
        android:id="@+id/top"
        lar:center_text="预约时间"
        android:layout_width="match_parent"
        lar:left_but="@drawable/btn_back"
        android:layout_height="44dp">
    </com.ayi.zidingyi_view.logandreg>

    <ScrollView
        android:layout_below="@id/top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--预约时间-->
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务频率（可多选）"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:padding="3dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/week1"
                            android:layout_centerInParent="true"
                            android:layout_width="61dp"
                            android:layout_height="35dp"
                            android:background="@drawable/week_select1"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:padding="3dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/week2"
                            android:layout_centerInParent="true"
                            android:layout_width="61dp"
                            android:layout_height="35dp"
                            android:background="@drawable/week_select2"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:padding="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/week3"
                            android:layout_centerInParent="true"
                            android:layout_width="61dp"
                            android:layout_height="35dp"
                            android:background="@drawable/week_select3"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:padding="3dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/week4"
                            android:layout_centerInParent="true"
                            android:layout_width="61dp"
                            android:layout_height="35dp"
                            android:background="@drawable/week_select4"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/week5"
                        android:layout_centerInParent="true"
                        android:layout_width="61dp"
                        android:layout_height="35dp"
                        android:background="@drawable/week_select5"/>
                </RelativeLayout>
                <RelativeLayout
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/week6"
                        android:layout_centerInParent="true"
                        android:layout_width="61dp"
                        android:layout_height="35dp"
                        android:background="@drawable/week_select6"/>
                </RelativeLayout>
                <RelativeLayout
                    android:padding="3dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/week7"
                        android:layout_centerInParent="true"
                        android:layout_width="61dp"
                        android:layout_height="35dp"
                        android:background="@drawable/week_select7"/>
                </RelativeLayout>
                <RelativeLayout
                    android:padding="3dp"
                    android:visibility="invisible"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="61dp"
                        android:layout_height="35dp"
                        android:background="@drawable/btn_wed_pre"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/time_select"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始时间"/>
                <TextView
                    android:background="@drawable/edit_biankuang"
                    android:layout_centerInParent="true"
                    android:padding="8dp"
                    android:id="@+id/select_time"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:hint="选择开始时间"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <TextView
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单时长"/>
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Spinner
                        android:id="@+id/spin_zhouqi"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content">

                    </Spinner>
                    <ImageView
                        android:id="@+id/tiaofu_6_01"
                        android:visibility="gone"
                        android:layout_width="100dp"
                        android:layout_height="1dp"
                        android:background="@color/gray"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/big_wenxintishi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="温馨提醒："/>

                </LinearLayout>
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/wenxintishi"
                    android:textSize="16sp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择服务频率"/>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/tishi_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="您选择的服务："/>
                        <TextView
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="从"/>
                        <TextView
                            android:textColor="@color/main_orange"
                            android:id="@+id/time_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="日开始"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:visibility="invisible"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="您选择的服务："/>
                        <TextView
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="至"/>
                        <TextView
                            android:textColor="@color/main_orange"
                            android:id="@+id/time_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="日结束"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginRight="90dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:visibility="invisible"
                            android:textSize="16sp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="您选择的服务："/>

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:id="@+id/time_stu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:id="@+id/button_btn"
            android:textColor="@color/white"
            android:text="提交"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style_old" />
    </RelativeLayout>
</RelativeLayout>